{
    "name": "pomelchenko/codeception-modules-sandbox",
    "type": "project",
    "description": "Example project with modules structure",
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "api/src/",
            "Admin\\": "admin/src/",
            "Core\\": "core/src/",
            "Frontend\\": "frontend/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Tests\\": "api/tests/",
            "Admin\\Tests\\": "admin/tests/",
            "Core\\Tests\\": "core/tests/",
            "Frontend\\Tests\\": "frontend/tests/"
        }
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.0",
        "codeception/module-phpbrowser": "^3.0"
    },
    "config": {
        "sort-packages": true
    }
}
